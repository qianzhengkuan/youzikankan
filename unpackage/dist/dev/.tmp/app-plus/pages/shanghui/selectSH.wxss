/* 颜色变量 */
page, .container {
  background-color: #F3F3F5;
}
.select-item {
  height: 407rpx;
  width: 100%;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  background-color: #fff;
  position: relative;
  margin-bottom: 23rpx;
  padding: 30rpx;
}
.select-item image.cover {
  width: 100%;
  height: 351rpx;
}
.select-item .bottom {
  position: absolute;
  width: 100%;
  padding: 20rpx;
  bottom: 0;
  left: 0;
  padding: 55rpx 64rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  color: #FFFFFF;
}
.select-item .bottom .title {
  font-size: 32rpx;
  font-weight: 800;
  margin-bottom: 14rpx;
}
.select-item .bottom .label {
  font-size: 23rpx;
}
.select-item .bottom image {
  width: 81rpx;
  height: 81rpx;
  margin-right: 24rpx;
  border-radius: 50%;
}
.select-item .request-btn {
  position: absolute;
  top: -74px;
  right: 60rpx;
  z-index: 99;
}
.select-item .request-btn button {
  color: #FFFFFF;
  height: 55rpx;
  line-height: 55rpx;
  background-color: #C34944;
  font-size: 26rpx;
  border-radius: 30rpx;
}

