/* 颜色变量 */
page,
.container {
  background-color: #F3F3F5;
}
.status {
  background-color: #FFFFFF;
}
.sh-title {
  margin-top: 30rpx;
  font-size: 30rpx;
  font-weight: 800;
  padding: 30rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  text-align: center;
  position: relative;
  color: #ADADAD;
}
.sh-title::before {
  content: "";
  position: absolute;
  left: 64%;
  top: 50%;
  width: 20%;
  height: 1rpx;
  background-color: #CCCCCC;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
}
.sh-title::after {
  content: "";
  position: absolute;
  right: 64%;
  top: 50%;
  width: 20%;
  height: 1rpx;
  background-color: #CCCCCC;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
}
