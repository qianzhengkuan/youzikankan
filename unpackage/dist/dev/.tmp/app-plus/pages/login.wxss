/* 颜色变量 */
.center-con, .container .top-logo, .container .bottom {
  text-align: center;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
}
.container {
  height: 100vh;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  padding-top: 88rpx;
}
.container .close-top {
  padding: 36rpx 0 0 36rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.container .close-top image {
  width: 29rpx;
  height: 29rpx;
}
.container .top-logo {
  margin: 0 auto;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  font-weight: 800;
  color: #C34944;
}
.container .top-logo image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
}
.container .center {
  padding: 0 30rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  -webkit-box-flex: 2;
  -webkit-flex: 2;
          flex: 2;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
.container .center .input-item {
  height: 88rpx;
  line-height: 88rpx;
  width: 92%;
  padding: 0 30rpx;
  margin: 0 auto;
  margin-bottom: 22rpx;
  text-indent: 20rpx;
}
.container .center .input-item input {
  font-size: 32rpx;
}
.container .center .yzkk-submitBtn {
  margin: 50rpx auto 40rpx auto;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
}
.container .center .getCode {
  background-color: #ffffff;
  border: 1px solid #C34944;
  color: #C34944;
  height: 70rpx;
  line-height: 70rpx;
  margin: 0;
  font-size: 26rpx;
  width: 220rpx;
  text-indent: 0rpx;
}
.container .center .r-text {
  color: #C34944;
  font-size: 30rpx;
}
.container .center .f-text {
  font-size: 30rpx;
  color: #999999;
}
.container .authLogin image {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}
.container .bottom {
  height: 130rpx;
  color: #999999;
  font-size: 28rpx;
}
.container .bottom navigator {
  color: #0066CC;
}

