
.moon-box{
	position: relative;
	width: 40px;
	height: 40px;
}
.moon{
	width: 16px;
	height: 16px;
	border-radius: 8px;
	position: absolute;
	top: 10px;
	left: 10px;
	background-color: #fff;
}
.move-box{
	position: relative;
	width: 16px;
	height: 16px;
	border-radius: 8px;
}
.move-moon{
	position: absolute;
	width: 16px;
	height: 16px;
	top:0;
	border-radius: 8px;
	position: relative;
	background-color: rgba(0,0,0,0.5);
}
.light{
	position: absolute;
	border-radius: 0.8px;
	height: 3px;
	width: 2px;
	top: 4.75px;
	left: 16.75px;
	-webkit-transform-origin:0px 13px;
	        transform-origin:0px 13px;
	background-color: #FFFFFF;
}
.light2{
	-webkit-transform: rotate(30deg);
	        transform: rotate(30deg);
}
