/* 颜色变量 */
.container {
  height: 75vh;
}
.sh-top {
  height: 200rpx;
  text-align: center;
}
.sh-top .title {
  font-size: 40rpx;
  font-weight: 800;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
}
.sh-top .label {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  font-size: 30rpx;
  color: #999999;
}
.sh-bg {
  height: 358rpx;
  width: 92%;
  margin: 20rpx auto;
  background-image: url(/static/images/joinBg.png);
  background-size: cover;
}
.sh-bg .sh-bg-con {
  text-align: center;
}
.sh-bg .sh-bg-con text {
  color: #FFFFFF;
  font-size: 40rpx;
  font-weight: 800;
}
.form-list {
  height: 88rpx;
  padding: 0rpx 30rpx;
  line-height: 88rpx;
  box-sizing: border-box;
  background-color: #fff;
}
.form-list .label {
  min-width: 138rpx;
}
.form-list .label text {
  font-size: 30rpx;
  font-weight: 800;
}
.form-list input {
  text-align: right;
}
.step-wrap .title {
  margin: 60rpx auto;
  text-align: center;
}
.step-wrap .title,
.step-wrap text {
  font-size: 28rpx;
  color: #999999;
}
.step-wrap .step-list {
  position: relative;
}
.step-wrap .step-list .icon-item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
}
.step-wrap .step-list .icon-item image {
  width: 80rpx;
  height: 80rpx;
  border: 1px solid #DDDDDD;
  border-radius: 50%;
  padding: 20rpx;
  box-sizing: border-box;
  margin-bottom: 10rpx;
}
.step-wrap .step-list::before {
  content: "";
  position: absolute;
  left: 28%;
  top: 33%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  width: 96rpx;
  height: 1rpx;
  background-color: #DDDDDD;
}
.step-wrap .step-list::after {
  content: "";
  position: absolute;
  right: 28%;
  top: 33%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  width: 96rpx;
  height: 1rpx;
  background-color: #DDDDDD;
}
.Audit {
  text-align: center;
}
.Audit image {
  width: 180rpx;
  height: 180rpx;
  margin-top: 280rpx;
}
.Audit image.shenhezhong {
  width: 475rpx;
  height: 261rpx;
  margin-top: 169rpx;
  margin-bottom: 71rpx;
}
.Audit .title {
  width: 82%;
  color: #E56361;
  font-size: 36rpx;
  margin: 0 auto;
  font-weight: 800;
}
.Audit .label {
  width: 82%;
  margin: 0 auto;
  margin-top: 30rpx;
  font-size: 28rpx;
  color: #A7A7A7;
  line-height: 42rpx;
}
.joinNow {
  margin: 25rpx auto;
}

