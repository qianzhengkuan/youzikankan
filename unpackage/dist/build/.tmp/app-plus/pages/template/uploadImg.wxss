/* 颜色变量 */
.img-list {
  padding: 0 30rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.img-list .uploadItem,
.img-list .imgItem {
  width: 162rpx;
  height: 162rpx;
  border-radius: 14rpx;
  margin: 12rpx;
  border: 1px solid #f1f1f1;
}
.img-list .uploadItem {
  border: 1px solid #f1f1f1;
}
.img-list .uploadItem image {
  width: 34rpx;
  height: 34rpx;
  border: 0;
}
.img-list .imgItem {
  position: relative;
}
.img-list .imgItem image {
  border: 0;
  width: 162rpx;
  height: 162rpx;
}
.img-list .imgItem .delete {
  position: absolute;
  right: -10rpx;
  top: -10rpx;
  width: 30rpx;
  height: 30rpx;
  border: 0;
  margin: 0;
  z-index: 9;
  padding: 6rpx;
  background-color: #e56361;
  border-radius: 50%;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}

